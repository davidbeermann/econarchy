<?xml version="1.0" encoding="UTF-8" ?>
<econarchy_level id="level1" width="400" height="2000">
	<!-- resource ids must be UNIQUE!!! -->
	<resources>
		<images>
			<!-- background images -->
			<image id="layer1" url="resources/level1/background_layer1.png" />
			<image id="layer2" url="resources/level1/background_layer2.png" />
			<!-- platform images -->
			<image id="regular" url="resources/level1/platform_regular.png" />
			<image id="dissolvable" url="resources/level1/platform_dissolvable.png" />
			<image id="slippery" url="resources/level1/platform_slippery.png" />
		</images>
	</resources>
	<specification>
		<!-- background parallax images should be from back to front -->
		<backgrounds>
			<background id="layer2" />
			<background id="layer1" />
		</backgrounds>
		<!-- platform types have to match the image ids above!!! -->
		<platforms>
			<platform type="regular" x="20" y="1900" />	
			<platform type="dissolvable" x="140" y="1800" />	
			<platform type="slippery" x="260" y="1700" />	
		</platforms>
	</specification>
</econarchy_level>